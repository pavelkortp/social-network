    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ContactsBTN"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/profileButtonsColor"
        android:text="VIEW MY CONTACTS"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/White"
        android:textSize="@dimen/smallText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/EditProfileBTN"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/bordered_button_shape"
        android:backgroundTint="@color/Black"
        android:text="Edit profile"
        android:foreground="?attr/selectableItemBackground"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:textSize="@dimen/smallText"
        app:layout_constraintBottom_toTopOf="@id/ContactsBTN"
        app:layout_constraintEnd_toEndOf="@id/ContactsBTN"
        app:layout_constraintStart_toStartOf="@id/ContactsBTN" />

    <TextView
        android:id="@+id/ProfileTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="Go to settings and fill out the profile"
        android:textColor="@color/Black"
        android:textSize="@dimen/smallText"
        app:layout_constraintBottom_toTopOf="@id/EditProfileBTN"
        app:layout_constraintEnd_toEndOf="@id/EditProfileBTN"
