<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/TopView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.5"
        android:background="@color/topBackground" />

    <TextView
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="@dimen/largeText" />

    <Button
        android:id="@+id/LogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/Settings"
        android:textColor="@color/grayText"
        android:textSize="@dimen/smallText" />

    <View
        android:id="@+id/Photo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/Settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Photo"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Photo"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="@dimen/normalText" />

    <TextView
        android:id="@+id/Career"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:layout_marginTop="10dp"
        android:text="Career"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Name"
        android:textColor="@color/grayText"
        android:textSize="@dimen/smallText" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Career"
        android:layout_marginTop="10dp"
        android:text="Home address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Career"
        android:textColor="@color/grayText"
        android:textSize="@dimen/smallText" />

    <Button
        android:id="@+id/ContactsBTN"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.9"
        android:text="VIEW MY CONTACTS"
        android:backgroundTint="@color/profileButtonsColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="@dimen/smallText" />

    <Button
        android:id="@+id/EditProfileBTN"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="7dp"
        android:text="Edit profile"
        app:layout_constraintBottom_toTopOf="@id/ContactsBTN"
        app:layout_constraintStart_toStartOf="@id/ContactsBTN"
        app:layout_constraintEnd_toEndOf="@id/ContactsBTN"
        android:textColor="@color/black"
        android:textSize="@dimen/smallText" />




</androidx.constraintlayout.widget.ConstraintLayout>